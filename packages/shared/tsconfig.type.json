    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false
