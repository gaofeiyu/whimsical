{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist/types",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
  }
}
