{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "lib",
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
